@model LJsystem.Models.SystemEmployeeSearch
@section Header{
    <title>链集-首页</title>
    <link href="/assert/dist/css/home.css" rel="stylesheet">
}
@Html.Action("Slide", "ChildAction", Model)
<div class="content-panel">
    <div class="location-toolbar clearfix">
        <div class="location pull-left">当前位置，用户管理<span>--</span>员工查询 </div>
    </div>
    <div class="mt-20 clearfix">
        <ul class="nav nav-tabs">
            <li role="presentation"><a href="/System/Employee">添加员工</a></li>
            <li role="presentation"  class="active"><a href="/System/EmployeeSearch">员工查询</a></li>
        </ul>
        </div>
        <form class="form-inline" method="post" action="/System/EmployeeSearch">
            <div class="filter-panel">
                <div class="form-group ">
                    <label>员工手机：</label>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="ownerPhone" placeholder="" maxlength="11" data-validation-engine="validate[custom[mobile]]">
                </div>
                <div class="form-group ">
                    <label>员工姓名：</label>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="ownerPhone" placeholder="" data-validation-engine="validate[custom[mobile]]">
                </div>
                <div class="form-group ">
                    <label>员工部门：</label>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>运营部</option>
                        <option>系统管理员</option>
                        <option>市场部</option>
                        <option>客服</option>
                        <option>全部</option>
                    </select>
                </div>
                           
                <div class="form-group ">
                    <label>角色：</label>
                </div>
                <div class="form-group ">
                    <select class="form-control" name="status" id="ffc-status">
                        <option value="全部" selected>全部</option>
                        <option value="已冻结">已冻结</option>
                        <option value="等待审核">等待审核</option>
                        <option value="已通过">已通过</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary ">查询</button>
            </div>
            <div class="table-container table-center">
                <table class="table table-condensed table-methodize table-striped">
                    <thead>
                        <tr>
                            
                            <th>员工手机</th>
                            <th>员工姓名</th>
                            <th>员工部门</th>
                            <th>角色</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
         
                            <td class="arial"><span>13121221212</span>
                            <td>
                                caimi
                            </td>
                            <td>
                               运营部
                            </td>
                            <td>系统管理员</td>
                           
                        </tr>
                    </tbody>
</table>
            </div>
            <!--最下面的分页器-->
            <div class="assistant clearfix">
                <div class="total">
                    <span class="text-primary arial">1-30</span>
                    <span> / 共</span>
                    <span class="text-primary arial">800</span>
                    <span>条</span>
                </div>
                <ul class="pagination">
                    <li class="disabled">
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="javascript:void(0);" data-page="2">2</a></li>
                    <li class="disabled"><a href="#">...</a></li>
                    <li><a href="javascript:void(0);" data-page="20">20</a></li>
                    <li><a href="javascript:void(0);" data-page="21">21</a></li>
                    <li><a href="javascript:void(0);" data-page="22">22</a></li>
                    <li class="disabled"><a href="#">...</a></li>
                    <li><a href="javascript:void(0);" data-page="99">99</a></li>
                    <li><a href="javascript:void(0);" data-page="100">100</a></li>
                    <li>
                        <a href="javascript:void(0);" data-page="2" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                        <input type="hidden" name="page" value="">
                    </li>
                </ul>
            </div>
</form>

</div>
@section Footer{
    <script src='/assert/dist/js/home.js'></script>
}
